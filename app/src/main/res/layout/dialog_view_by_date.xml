<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="VIEW BY DATE RANGE"
        android:textColor="#F5145B"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/dialog_Schedule_TxtStart"
        android:hint="Start Day"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dialog_Schedule_TxtEnd"
        android:hint="End Day"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dialog_Schedule_BtnSearch"
            android:drawableLeft="@drawable/search"
            android:text="Search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dialog_Schedule_BtnClear"
            android:drawableLeft="@drawable/clear"
            android:text="Clear"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dialog_Schedule_Btncancel"
            android:drawableLeft="@drawable/icons_cancel_24"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>