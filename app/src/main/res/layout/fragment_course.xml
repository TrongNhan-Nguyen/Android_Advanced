<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Fragment.Fragment_CourseContainer">


    <androidx.cardview.widget.CardView
        android:id="@+id/fCourse_CardViewSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#398FA3"
        app:cardCornerRadius="12dp">
        <Spinner
            android:id="@+id/fCourse_SpinnerSemesters"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/fCourse_RL_Search"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/fCourse_CardViewSpinner"
        android:background="@drawable/border_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/fCourse_ImgSearch"
            android:src="@drawable/search"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"/>
        <AutoCompleteTextView
            android:layout_toRightOf="@+id/fCourse_ImgSearch"
            android:hint="Enter a Course Name"
            android:id="@+id/fCourse_AC_Search"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/fCourse_ImgClear"
            android:src="@drawable/clear"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/fCourse_TitleLV"
        android:orientation="horizontal"
        android:layout_below="@+id/fCourse_RL_Search"
        android:layout_marginTop="5dp"
        android:background="#A4E3F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ID"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#313030"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="COURSE"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#313030"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="SEMESTER"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#313030"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:id="@+id/fCourse_ListViewCS"
        android:layout_below="@id/fCourse_TitleLV"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/fCourse_CardViewCourseRegistration"
        android:layout_below="@+id/fCourse_ListViewCS"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:backgroundTint="#398FA3"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Course Registration"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/fCourse_txtTotalregistraton"
                android:text="24"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_textview"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/fCourse_LVCRTitle"
        android:layout_below="@+id/fCourse_CardViewCourseRegistration"
        android:background="#A4E3F1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="COURSE ID"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#313030"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="COURSE NAME"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#313030"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="ACTION"
            android:textSize="14sp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#313030"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ListView
        android:id="@+id/fCourse_ListViewCR"
        android:layout_below="@id/fCourse_LVCRTitle"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
</RelativeLayout>