<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_CourseContainer">
    <ViewFlipper
        android:id="@+id/fNews_VF"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ads1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ads2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ads3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ads4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ViewFlipper>
    <TextView
        android:id="@+id/fNews_TxtTitle"
        android:layout_below="@+id/fNews_VF"
        android:text="Daily News"
        android:textColor="#FF0066"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/fNews_ListViewRss"
        android:layout_below="@+id/fNews_TxtTitle"
        android:layout_marginTop="3dp"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>