<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivities.LoadingActivity">

    <TextView
        android:id="@+id/loading_Title"
        android:text="ASSIGNMENT ADVANCED ANDROID"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF7900"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/loading_txtBrandName"
        android:text="APP SCHOOL MANAGER"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="#FF7900"
        android:layout_below="@+id/loading_CardView"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/loading_txtSlogan"
        android:text="\u00a9PS10674--Nguyễn Trọng Nhân\u2122"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#FF7900"
        android:layout_below="@+id/loading_txtBrandName"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/loading_CardView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loading_Title"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#ff0"
        android:layout_width="300dp"
        android:layout_height="200dp">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/background_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginBottom="10dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#FF7900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>